<div class="row">
  <div class="col-lg-4"></div>
  <div class="col-lg-4">
    <h1>Login</h1>
    <form action="/Auth/Login" method="post">
      <div class="form-group">
        <label for="correo">Correo</label>
        <input type="email" class="form-control" id="correo" placeholder="Ingrese su Correo" name="correo">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Ingrese su Password" name="password">
      </div>
      <button type="submit" class="btn btn-success btn-block">Ingresar</button>
      <button type="reset" class="btn btn-danger btn-block">Reiniciar Campos</button>
    </form>
  </div>
  <div class="col-lg-4"></div>
</div>
