<h2>Crear Usuario</h2>

<form action="/Pastel/crearPastel" method="post">
  <div class="form-group">
    <label for="nombre">Nombre</label>
    <input type="text" class="form-control" id="nombre" placeholder="Ingrese el Nombre del Pastel" name="nombre">
  </div>
  <div class="form-group">
    <label for="tipo">Tamaño del Pastel</label>
    <select class="custom-select" name="tipo" style="width: 100%;">
      <option value="Familiar">Grande</option>
      <option value="Mediana">Mediano</option>
    </select>
  </div>
  <div class="form-group">
    <label for="precio">Precio</label>
    <input type="text" class="form-control" id="precio" placeholder="0.00" name="precio" disabled>
  </div>
  <div class="form-group">
    <input type="hidden" class="form-control" value="<%= id_user %>" name="id_user">
  </div>
  <div class="row">
    <div class="col-sm-4">
      <h4>Tipo de cubierta</h4>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="masa" id="fina" value="Masa Fina" checked>
          Crema en base de mantequilla
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="masa" id="gruesa" value="Masa Gruesa">
          Crema chantillí clásica
        </label>
      </div>
    </div>
    <div class="col-sm-4">
      <h4>Ingrediente Principal del Pastel</h4>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="principal" id="pepperoniP" value="Pepperoni">
          Vainilla
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="principal" id="tocinoP" value="Tocino">
          Chocolate
        </label>
      </div>
    </div>
    <div class="col-sm-4">
      <h4>Ingrediente Adicional</h4>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="adicional" id="jamonA" value="Jamón" checked>
          Crema pastelera
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="adicional" id="pepperoniA" value="Pepperoni">
          Uvas
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="adicional" id="tocinoA" value="Tocino">
          Frutillas
        </label>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Pedir Pastel</button>
  <button type="reset" class="btn btn-danger">Reiniciar Campos</button>
</form>
